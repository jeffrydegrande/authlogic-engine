%h2 Login

- semantic_form_for(@user_session) do |f|
  = f.error_messages
  - f.inputs do
    = f.input :username
    = f.input :password

    = f.input :remember_me, :as => :boolean

  - f.buttons do
    = f.commit_button "Login" 

%small 
  = link_to "Forget your password?", new_password_reset_path
